meta {
  name: Login
  type: http
  seq: 2
}

post {
  url: {{url}}/User/Login
  body: json
  auth: none
}

body:json {
  {
      "username": "{{login-username}}",
      "password": "{{test-password}}"
  }
}

assert {
  res.status: eq 200
  res.body.response.user.username: eq {{login-username}}
}

script:post-response {
  let token = res.getBody().response.token;
  
  bru.setEnvVar("token", token);
}
